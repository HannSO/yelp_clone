<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.description %></p>

<h3>Reviews:</h3>

<% if @restaurant.reviews.any? %>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li>
        <%= review.thoughts %>, <strong><%= review.rating %>/5</strong>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No reviews.</p>
<% end %>
