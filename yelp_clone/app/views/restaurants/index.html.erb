

<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h2><%= link_to restaurant.name, restaurant_path(restaurant) %> </h2>
    <p><%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %></p>
    <p><%= link_to "Rate and Review #{restaurant.name}", new_restaurant_review_path(restaurant) %></p>




    <% if restaurant.reviews.any? %>
      <ul>
        <% restaurant.reviews.each do |review| %>
          <li>
            <%= review.thoughts %>, <strong><%= review.rating %></strong>/5
            <%= link_to "Delete review of #{restaurant.name}", review_path(review), method: :delete%>
            <%= link_to "Endorse", review_endorsements_path(review), class: 'endorsements-link'%>
            <span class = "endorsements_count"> <%=review.endorsements.count%> </span> <%= 'endorsement'.pluralize(review.endorsements.count)%>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No reviews.</p>
    <% end %>
  <h5>Average rating: <%=star_rating(restaurant.average_rating.to_i)%> </h3>

  <% end %>

<% else %>
  <h1>No restaurants yet</h1>
<% end %>

<a href="/restaurants/new">Add a restaurant</a>
